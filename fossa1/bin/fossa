  c.summary = ''
  c.description = ''
  c.example 'description', 'command example'
  c.option '--some-switch', 'Some switch that does something'
  c.action do |args, options|
    # Do something or c.when_called Fossa::Commands::Serve
  end
end

command :build do |c|
  c.syntax = 'fossa build [options]'
  c.summary = ''
